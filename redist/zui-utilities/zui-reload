#!/usr/bin/env bash

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Configuration
ZUI_PATH=${HOME}/.zui
TMP_PATH=${TMP_PATH:-/tmp/zui}
LOG_FILE="${TMP_PATH}/zui_reload.log"

# Ensure log directory exists
mkdir -p "${TMP_PATH}"

# Logging functions
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1" | tee -a "${LOG_FILE}" 2>/dev/null || echo -e "${BLUE}[INFO]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1" | tee -a "${LOG_FILE}" 2>/dev/null || echo -e "${RED}[ERROR]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1" | tee -a "${LOG_FILE}" 2>/dev/null || echo -e "${GREEN}[SUCCESS]${NC} $1"
}

# Main reload logic
if [[ -f ${HOME}/.config/bspwm/bspwmrc ]]; then
    log_info "Reloading ZUI configuration..."
    if bash ${HOME}/.config/bspwm/bspwmrc >> "${LOG_FILE}" 2>&1; then
        log_success "ZUI configuration reloaded successfully"
    else
        log_error "Failed to reload ZUI configuration"
        echo -e "${BLUE}Reload Log:${NC} ${LOG_FILE}"
        exit 1
    fi
else
    log_error "FATAL ERROR: could not reload zui - bspwmrc not found"
    echo -e "${BLUE}Reload Log:${NC} ${LOG_FILE}"
    exit 1
fi

echo -e "${BLUE}Reload Log:${NC} ${LOG_FILE}"