* {
  // Geometric theme colors inspired by glowing wireframe aesthetic
  bg-main: #0A1A1F;
  bg-alt: #0E2229;
  bg-light: #142B33;
  fg: #E0F8FF;
  accent: #00FFCC;
  success: #00E5B8;
  warning: #FFB347;
  error: #FF4757;
  info: #00D9FF;
  border-glow: #00E5CC;
  
  background-color: transparent;
  text-color: @fg;
  
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;
}